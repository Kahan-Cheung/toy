<% provide(:title, '所有用户') %>
<h1>所有用户</h1><h2>(总数：<%=@count_allusers%>)</h2>

<%= form_tag users_path, :method => :get,  :class =>'form-inline' do -%>
   <%=text_field_tag "search", params[:search], :class => 'form-control' %>
   <button type="submit" class="btn btn-default">查找用户</button>
<% end -%>


<ul class="users">
    <% @users.each do |user| %>
        <%= render user %>
    <% end %>
</ul>
<%= will_paginate %>