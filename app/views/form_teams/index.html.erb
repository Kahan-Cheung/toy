<% provide(:title, "选择加入队伍") %>

<h1>选择加入队伍 </h1>

<%= form_tag teams_path, :method => :get,  :class =>'form-inline' do -%>

   队伍名:<%=text_field_tag "search", params[:search], :class => 'span2 form-control' %>
   课程编号:<%=text_field_tag "search2", params[:search2], :class => 'form-control' %>
   <button type="submit" class="btn btn-default">查找</button>
<% end -%>


<table class="table table-striped">
     <tr>
         <td>队伍名</td>
         <td>组队人数</td>
         <td>课程编号</td>
         <td>队伍简介</td>
         <% if logged_in? %>
         <td>申请参加</td>
         <% end %>
     </tr>
<ul>
    <% @groups.each do |group| %>
         <tr>
             <td><%= group.name %></td>
             <td><%= count_menber(group.menbers) %>/<%= group.ltnum %></td>
             <td><%= group.ccode %></td>
             <td><%= group.introduce %></td>
             <% if logged_in? %>
             <td>
                 <% if group.nownum != group.ltnum %>
                 <%= link_to "apply",apply_teams_url(group_id:group.id,
                 user_id:current_user.id),
                 data: { confirm: "You sure?" } %>
                 <% end %>
             </td>
             <% end %>
         </tr>
    <% end %>
</ul>
</table>
<%= will_paginate @groups%>