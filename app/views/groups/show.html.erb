<h1><%= @group.name %></h1>

<div class="row">
<aside class="col-md-8">
    <h2>队伍成员<h2>
    <table class="table table-striped">
        <tr>
             <td>用户名</td>
             <td>学院</td>
             <td>邮箱</td>
             <td>电话</td>
             <td>是否队长</td>
        </tr>
        <% @group.menbers.each do |menber| %>
              <% if menber.status == 1 %>
              <tr>
                 <td><%= menber.user.name %></td>
                 <td><%= menber.user.academy %></td>
                 <td><%= menber.user.email %></td>
                 <td><%= menber.user.phone %></td>
                 <td><%= menber.authority %></td>
             </tr>
              <% end %>
        <% end %>
    </table>
</aside>
 <div class="col-md-4">
   <h2>文章<h2>
   <table class="table table-striped">
      <tr>
          <td>标题</td>
          <td colspan="3"></td>
      </tr>

        <% @group.articles.each do |article| %>
          <tr>
            <td><%= article.name %></td>
            <td><%= link_to 'Show', article %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            
          </tr>
        <% end %>
    </table>
    
    <br>
    
    <%= link_to 'New Article', new_article_url(group_id:@group.id) %>
 </div>
</div>

<% if leader?(@group) %>
<div class="row">
<aside class="col-md-12">
    <h2>申请加入的成员<h2>
    <table class="table table-striped">
        <tr>
             <td>用户名</td>
             <td>申请理由</td>
             <td>接受</td>
        </tr>
        <% @group.menbers.each do |menber| %>
             <% if menber.status == 0 %>
              <tr>
                 <td><%= menber.user.name %></td>
                 <td><%= menber.message %></td>
                 <td><%= link_to "accpet",accpet_menber_url(group_id:@group.id,
                     user_id:current_user.id,
                     menber_id:menber.id),
                     data: { confirm: "You sure?" } %>
                 </td>
             </tr>
             <% end %>
        <% end %>
    </table>
</aside>

</div>

<div class="row">
    <aside class="col-md-6">
    <h2>推荐合并的队伍<h2>
    <table class="table table-striped">
         <tr>
             <td>队伍名</td>
             <td>组队人数</td>
             <td>课程编号</td>
             <td>队伍简介</td>
             <td>合并邀请</td>
         </tr>
    
        <% @re_groups.each do |group2| %>
             <tr>
                 <td><%= group2.name %></td>
                 <td><%= group2.nownum %>/<%= group2.ltnum %></td>
                 <td><%= group2.ccode %></td>
                 <td><%= group2.introduce %></td>
                 <td> | <%= link_to "merge", apply_merge_teams_url(follower_id: @group.id,
                         followed_id: group2.id),
                    data: { confirm: "You sure?" } %>
                </td>
                
             </tr>
             
        <% end %>
    </table>
    </aside>
    <div class="col-md-6">
         <h2>申请合并的队伍 (数量<%=@group.following.count%>) <h2>
         <table class="table table-striped">
             <tr> 
                 <td>队伍名</td>
                 <td>组队人数</td>
                  <td></td>
             </tr>
             <% @group.following.each do |f| %>
                  <tr>
                     <td><%= f.name %></td>
                     <td><%= f.nownum %>/<%= f.ltnum %></td>
                     <td><%= link_to "delete","#",
                         data: { confirm: "You sure?" } %>
                     </td>
                     
                 </tr>
            <% end %>
        </table>
         <h2>被邀请合并的队伍 (数量<%=@group.followers.count%>)<h2>
         <table class="table table-striped">
             <tr> 
                 <td>队伍名</td>
                 <td>组队人数</td>
                 <td></td>
             </tr>
             <% @group.followers.each do |f| %>
                  <tr>
                     <td><%= f.name %></td>
                     <td><%= f.nownum %>/<%= f.ltnum %></td>
                     <td><%= link_to "accpet",accpet_merge_teams_url(followed_id: @group.id,
                         follower_id: f.id),
                         data: { confirm: "You sure?" } %>
                     </td>
                 </tr>
            <% end %>
        </table>
    </div>
</div>
<% end %>