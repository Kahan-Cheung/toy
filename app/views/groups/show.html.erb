<h1><%= @group.name %></h1>

<div class="row">
<aside class="col-md-6">
    <h2>队伍成员<h2>
    <table class="table table-striped">
        <tr>
             <td>用户名</td>
             <td>学院</td>
             <td>邮箱</td>
             <td>电话</td>
             <td>是否队长</td>
        </tr>
        <% @group.menbers.each do |menber| %>
              <% if menber.status == 1 %>
              <tr>
                 <td><%= menber.user.name %></td>
                 <td><%= menber.user.academy %></td>
                 <td><%= menber.user.email %></td>
                 <td><%= menber.user.phone %></td>
                 <td><%= menber.authority %></td>
             </tr>
              <% end %>
        <% end %>
    </table>
</aside>
 <div class="col-md-6">
        <h1>yunzheng</h1>
 </div>
</div>

<% if leader?(@group) %>
<div class="row">
<aside class="col-md-6">
    <h2>申请加入的成员<h2>
    <table class="table table-striped">
        <tr>
             <td>用户名</td>
             <td>申请理由</td>
             <td>接受</td>
        </tr>
        <% @group.menbers.each do |menber| %>
             <% if menber.status == 0 %>
              <tr>
                 <td><%= menber.user.name %></td>
                 <td><%= menber.message %></td>
                 <td><%= link_to "accpet",accpet_menber_url(group_id:@group.id,
                     user_id:current_user.id,
                     menber_id:menber.id),
                     data: { confirm: "You sure?" } %>
                 </td>
             </tr>
             <% end %>
        <% end %>
    </table>
</aside>

</div>

<div class="row">
    <aside class="col-md-6">
    <h2>推荐合并的队伍<h2>
    <table class="table table-striped">
     <tr>
         <td>队伍名</td>
         <td>组队人数</td>
         <td>课程编号</td>
         <td>队伍简介</td>
         <td>合并邀请</td>
     </tr>

    <% @re_groups.each do |group| %>
         <tr>
             <td><%= group.name %></td>
             <td><%= group.nownum %>/<%= group.ltnum %></td>
             <td><%= group.ccode %></td>
             <td><%= group.introduce %></td>
             <td> <% if current_user.admin? %>
                | <%= link_to "merge", "#",
                data: { confirm: "You sure?" } %>
                <% end %>
            </td>
            
         </tr>
         
    <% end %>

</table>

    </aside>
</div>
<% end %>